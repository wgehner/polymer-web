extends  ./_part/_baseShell

block head
	title polymerbootcamp.com
	include ./_part/_header

block main
	#fullpage
		#splash
			a(name='home')
			.mui-container-fluid
				.mui-row
					.mui-col-xs-12.appbar-spacer
				include ./home/index.pug
		#clients
			a(name='clients')
			.mui-container-fluid
				.mui-row
					.mui-col-xs-12 &nbsp;
				include ./clients/index.pug
		#dates
			a(name='dates')
			.mui-container-fluid
				.mui-row
					.mui-col-xs-12 &nbsp;
				include ./dates/index.pug
				.mui-row
					.mui-col-xs-12 &nbsp;
		#contact
			a(name='contact')
			.mui-container-fluid
				.mui-row
					.mui-col-xs-12 &nbsp;
				include ./contact/index.pug

	script. 
		TS.onAppReady(UIinit)

		function UIinit() {

			$('#fullpage').css('opacity','1')

			$.fn.showUp($('#appbar'))
		}

