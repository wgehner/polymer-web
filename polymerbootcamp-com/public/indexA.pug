		.splash__tagline--lg We Make Web Apps Work 
	//-.section(style='background-color: transparent')
	#mission
		.mission__tagline
			include mission.html
		amp-iframe(src='/en/home/carousel_contentA.html', id='carousel-iframe--amp', width='100vw' height='87', frameborder='0', sandbox='allow-scripts allow-top-navigation' scrolling='no')
			amp-img.ani__placeholder(src='/en/home/res/ani_placeholder.png', layout='fill', placeholder='')
	.news-section
		#news
			a(href='#section3')
			.mui-container-fluid
				include _news.html
	.seminar-section
		#seminars
			.mui-container-fluid
				include _seminars.html
